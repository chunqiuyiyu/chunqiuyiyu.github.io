body {
  margin: 0;
}

html, body, .container {
  height: 100%;
  font-family: Hiragino Sans GB, Microsoft YaHei, WenQuanYi, Airal, sans-serif;
  color: #444;
}

.container {
  max-width: 840px;
  margin: 0 auto;
}

a {
  color: #000;
  text-decoration: none;
}

.home {
  display: table;
  width: 100%;
  height: 100%;

  .info {
    display: table-cell;
    vertical-align: middle;
    text-align: center;

    .logo {
      font-size: 2.5em;
      font-weight: bold;
    }

    .subtitle {
      font-size: 14px;
      color: gray;
    }

    .sns {
      margin: 1em auto;

      a {
        width: 50px;
        color: #999;
        display: inline-block;

        &:hover {
          color: #000;
        }
      }
    }

    footer {
      border: 0;
      color: #000;
      padding: 0;
    }
  }
}

.page {
  margin: 0 20px;
  margin-bottom: 1em;
  
  p {
    line-height: 1.5em;
  }

  .page-content {
    text-align: justify;

    a {
      color: #d94240;
      border-bottom: 1px dotted;

      &:hover {
        border-bottom: 1px solid;
      }
    }

    ul, ol {
      text-align: left;

      li {
        padding: 5px;
      }
    }
  }
  
  .page-footer {
    
    a {
      color: #666;

      &:hover {
        color: #000;
      }
    }
    
    .top {
      float: right;
    }
  }
}

@import "_partial/header";
@import "_partial/post";
@import "_partial/archive";
@import "_partial/paginator";
@import "_partial/footer";
@import "_partial/nav";
@import "_partial/highlight";
